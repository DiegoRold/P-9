---
 import SearchBar from "../components/SearchBar"
const links = [
  { name: "Inicio", href: "/" },
  { name: "Cursos", href: "#ultimasPublicaciones" },
  { name: "Subscripcion", href: "" }, 
  
];
---

<header class="bg-gray-700 p-3 fixed top-0 left-0 w-full z-50">
  <div class="container mx-auto flex justify-between items-center">
    <img src="/logo-cocina.jpg" class="w-24 h-auto" />

    <nav>
      {/* Aumenta space-x-4 a space-x-8 para más separación */}
      <ul class="flex space-x-8">
        {links.map((link) => (
          <li>
            <a 
              href={link.href} 
              class="hover:underline text-slate-900 font-serif h-10"
            >
              {link.name}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    
    <SearchBar client:load />
  </div>
</header>
